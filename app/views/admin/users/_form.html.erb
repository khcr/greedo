<%= form_for [:admin, @user] do |f| %>

	<%= render 'error_messages', object: f.object %>
	<ul>
		<li>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</li>
		<li>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</li>
	</ul>
	<ul>
		<li>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>
		</li>
		<li>
			<%= f.label :level %>
			<%= f.select :level, {"superadmin" => "1", "admin" => "2", "broadcaster" => "3", "listener" => "4"} %>
		</li>
	</ul>

	<ul>
		<li>
			<%= f.submit %>
		</li>
	</ul>
<% end %>